# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /client/cart/list                                                         controllers.Application.cartList()
GET           /client/cart/del/$cartId<[0-9]+>                                          controllers.Application.delCart(cartId:Long)
POST          /client/cart                                                              controllers.Application.cart()
POST          /client/cart/get/sku/list                                                 controllers.Application.getCartSku()
GET           /client/cart/verify/amount/$skuId<[0-9]+>/$amount<[0-9]+>                 controllers.Application.verifySkuAmount(skuId:Long,amount:Integer)
GET           /client/order                                                             controllers.Application.shoppingOrder()
POST          /client/order/state/update                                                controllers.Application.updateOrderState()